<div class="poster-series swiper-slide slider-item">
    [xfgiven_age]<div class="age-limit">[xfvalue_age]+</div>[/xfgiven_age]
    <a class="poster-series_image poster-short_image--wrapper" href="{full-link}">
        <div class="poster-label poster-label--main">
            [xfgiven_skoro]
            <div class="poster-label poster-label_temporal poster-label_position-absolute poster-label_position--absolute poster-label_background" style="background: #32ba43; border-radius: 3px;">
                <span class="poster-label_text">[xfvalue_skoro]</span>
            </div>
            [/xfgiven_skoro]
            [xfgiven_quality]
            <div class="poster-label poster-label_temporal poster-label_position-absolute poster-label_position--absolute poster-label_background" style="border-radius: 0px;">
                <span class="poster-label_text">[xfvalue_quality]</span>
            </div>
            [/xfgiven_quality]
        </div>
        <div class="slider-image">
            <img class="xfieldimage slider" src="[xfvalue_poster-bg]" alt="{title}">
        </div>
    </a>
</div>